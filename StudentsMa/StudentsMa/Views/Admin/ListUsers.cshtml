@using StudentsMa.Models;
@model IEnumerable<AppUser>

@{
    int counter = 1;
    ViewBag.Title = "List Users";
}

<div class="my-5 text-left">
    <h2> List of Users </h2>
    <hr />
</div>

<table class="table table-hover">
    <thead class="alert-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">@Html.DisplayNameFor(item => item.FullName)</th>
            <th scope="col">@Html.DisplayNameFor(item => item.CIN)</th>
            <th scope="col">@Html.DisplayNameFor(item => item.Email)</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (AppUser user in Model)
        {
            <tr>
                <td>@counter</td>
                <td>@user.FullName</td>
                <td>@user.CIN</td>
                <td>@user.Email</td>

                <td>
                    <form method="post" asp-route-id="@user.Id">
                        <a class="btn btn-primary text-white btn-sm" asp-action="EditUser" asp-controller="Account" asp-route-id="@user.Id">Update</a>
                        <button type="submit" class="btn btn-secondary btn-sm" onclick="return confirm('Are you sure would you like to delete this user!')">Delete</button>
                    </form>

                </td>
            </tr>
            counter++;

        }


    </tbody>
</table>

<div class="my-5 text-center">
    <a asp-area="Identity" asp-page="/Account/Register">Add User</a> |
    <a asp-action="index" asp-controller="student">Back to Home</a>
</div>