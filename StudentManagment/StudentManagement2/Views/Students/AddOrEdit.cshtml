@model StudentManagement2.Models.StudentsViewModel

@{
    ViewData["Title"] = Model.Student_ID==0?"Add Student":"Update Student";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddOrEdit" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Student_ID" />
            <div class="form-group">
                <label asp-for="Student_Name" class="control-label"></label>
                <input asp-for="Student_Name" class="form-control" />
                <span asp-validation-for="Student_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student_CIN" class="control-label"></label>
                <input asp-for="Student_CIN" class="form-control" />
                <span asp-validation-for="Student_CIN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student_Address" class="control-label"></label>
                <input asp-for="Student_Address" class="form-control" />
                <span asp-validation-for="Student_Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
