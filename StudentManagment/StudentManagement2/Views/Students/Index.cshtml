@model System.Data.DataTable

@{
    ViewData["Title"] = "All Students";
}

<div class="jumbotron">
    <h1 class="text-center">@ViewData["Title"]</h1>
</div>
<p>
    
</p>
<table class="table table-bordered">
    <thead class="thead-light">
        <tr>
            <th>
                Student Name
            </th>
            <th>
                Student CIN
            </th>
            <th>
                Student Address
            </th>
            <th>
                <a asp-action="AddOrEdit">Create New</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Rows.Count; i++)
        {
        <tr>
            <td>
                @Model.Rows[i]["Student_Name"]
            </td>
            <td>
                @Model.Rows[i]["Student_CIN"]
            </td>
            <td>
                @Model.Rows[i]["Student_Address"]
            </td>
            <td>
                <a asp-action="AddOrEdit" asp-route-id="@Model.Rows[i]["Student_ID"]">Edit</a> |
                <a asp-action="Delete" asp-route-id="@Model.Rows[i]["Student_ID"]">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
